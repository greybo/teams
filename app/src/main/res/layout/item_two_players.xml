<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="6dp"
    android:layout_marginTop="6dp">

    <TextView
        android:id="@+id/tv_number_player_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/background_circle_orange"
        android:gravity="center"
        android:text="@string/_1" />

    <TextView
        android:id="@+id/tv_name_player_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_number_player_1"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@+id/tv_number_player_1"
        android:layout_toLeftOf="@+id/center"
        android:layout_toRightOf="@+id/tv_number_player_1"
        android:layout_toStartOf="@+id/center"
        android:text="tv_name_player_1" />

    <View
        android:id="@+id/center"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:layout_centerInParent="true" />


    <TextView
        android:id="@+id/tv_name_player_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_toEndOf="@+id/center"
        android:layout_toLeftOf="@+id/tv_number_player_2"
        android:layout_toRightOf="@+id/center"
        android:layout_toStartOf="@+id/tv_number_player_2"
        android:gravity="end" />

    <TextView
        android:id="@+id/tv_number_player_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/background_circle_black"
        android:gravity="center"
        android:textColor="@android:color/white" />

</RelativeLayout>